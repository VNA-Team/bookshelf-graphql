  "keywords": [],
  "author": "Khanh Le",
  "license": "MIT",
  "dependencies": {
    "bcrypt": "^5.0.0",
    "dotenv": "^8.2.0",
    "faker": "^4.1.0",
    "global-dirs": "^2.0.1",
    "jsonwebtoken": "^8.5.1",
    "nexus": "^0.26.1",
    "nexus-plugin-jwt-auth": "^1.3.1",
    "nexus-plugin-prisma": "^0.17.0",
    "nexus-plugin-shield": "^0.2.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^3.0.0",
    "@types/faker": "^4.1.12",
    "@types/jsonwebtoken": "^8.5.0",
    "@typescript-eslint/eslint-plugin": "^3.9.1",
    "@typescript-eslint/parser": "^3.9.1",
    "eslint": "^7.7.0",
    "eslint-plugin-node": "^11.1.0",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.11"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": [
      "npm run lint",
      "bash -c tsc --noEmit"
